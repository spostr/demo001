{
  "name": "C++ 12",
  "image": "mcr.microsoft.com/cpp/cmake:12.0.2",
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cpptools.cmake"
  ],
  "settings": {
    "cpp.default.compilerPath": "/usr/bin/gcc-12",
    "cpp.default.compilerArgs": [
      "-std=c++20",
      "-Wall",
      "-Wextra",
      "-pedantic"
    ]
  }
}
